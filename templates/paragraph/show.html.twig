{% extends 'base.html.twig' %}

{% block title %}Paragraphe #{{ paragraph.id }} - {{ story.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-0">
                                <i class="fas fa-paragraph"></i> 
                                Paragraphe #{{ paragraph.id }}
                                {% if paragraph.isStartParagraph %}
                                    <span class="badge bg-success ms-2">
                                        <i class="fas fa-play"></i> Point de départ
                                    </span>
                                {% endif %}
                            </h1>
                            <p class="text-muted mb-0">
                                Histoire : "{{ story.title }}"
                            </p>
                        </div>
                        <div>
                            <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" class="btn btn-success me-2">
                                <i class="fas fa-plus"></i> Nouveau choix
                            </a>
                            <a href="{{ path('app_choice_index', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" class="btn btn-info me-2">
                                <i class="fas fa-fork"></i> Gérer les choix
                            </a>
                            <a href="{{ path('app_paragraph_edit', {'storyId': story.id, 'id': paragraph.id}) }}" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="{{ path('app_story_show', {'id': story.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-book"></i> Voir l'histoire
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="paragraph-content mb-4">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-file-text"></i> Contenu
                        </h5>
                        <div class="border rounded p-3 bg-light">
                            {{ paragraph.content|raw }}
                        </div>
                    </div>

                                         <!-- Vue arborescente de l'histoire -->
                     <div class="card mb-4">
                         <div class="card-header">
                             <h5 class="mb-0">
                                 <i class="fas fa-sitemap"></i> Vue arborescente de l'histoire
                             </h5>
                         </div>
                         <div class="card-body">
                             <div class="story-tree">
                                 <!-- Paragraphe de départ -->
                                 {% set startParagraph = story.paragraphs|filter(p => p.isStartParagraph)|first %}
                                 {% if startParagraph %}
                                     <div class="tree-node tree-start">
                                         <div class="tree-content">
                                             <div class="tree-paragraph {% if startParagraph.id == paragraph.id %}tree-current{% endif %}">
                                                 <div class="tree-paragraph-header">
                                                     <span class="tree-badge tree-start-badge">
                                                         <i class="fas fa-play"></i> Départ
                                                     </span>
                                                     <span class="tree-paragraph-id">#{{ startParagraph.id }}</span>
                                                 </div>
                                                 <div class="tree-paragraph-content">
                                                     {{ startParagraph.content|striptags|slice(0, 100) }}{% if startParagraph.content|length > 100 %}...{% endif %}
                                                 </div>
                                                 <div class="tree-paragraph-actions">
                                                     <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': startParagraph.id}) }}" 
                                                        class="btn btn-sm btn-outline-primary">
                                                         <i class="fas fa-eye"></i> Voir
                                                     </a>
                                                     {% if startParagraph.id != paragraph.id %}
                                                         <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': startParagraph.id}) }}" 
                                                            class="btn btn-sm btn-outline-success">
                                                             <i class="fas fa-plus"></i> Choix
                                                         </a>
                                                     {% endif %}
                                                 </div>
                                             </div>
                                         </div>
                                         
                                         <!-- Choix du paragraphe de départ -->
                                         {% if startParagraph.sourceChoices|length > 0 %}
                                             <div class="tree-branches">
                                                 {% for choice in startParagraph.sourceChoices %}
                                                     <div class="tree-branch">
                                                         <div class="tree-choice">
                                                             <i class="fas fa-arrow-right"></i>
                                                             <span class="tree-choice-text">{{ choice.text }}</span>
                                                         </div>
                                                         
                                                         <!-- Paragraphe de destination -->
                                                         <div class="tree-node">
                                                             <div class="tree-content">
                                                                 <div class="tree-paragraph {% if choice.destinationParagraph.id == paragraph.id %}tree-current{% endif %}">
                                                                     <div class="tree-paragraph-header">
                                                                         <span class="tree-paragraph-id">#{{ choice.destinationParagraph.id }}</span>
                                                                     </div>
                                                                     <div class="tree-paragraph-content">
                                                                         {{ choice.destinationParagraph.content|striptags|slice(0, 80) }}{% if choice.destinationParagraph.content|length > 80 %}...{% endif %}
                                                                     </div>
                                                                     <div class="tree-paragraph-actions">
                                                                         <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': choice.destinationParagraph.id}) }}" 
                                                                            class="btn btn-sm btn-outline-primary">
                                                                             <i class="fas fa-eye"></i> Voir
                                                                         </a>
                                                                         {% if choice.destinationParagraph.id != paragraph.id %}
                                                                             <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': choice.destinationParagraph.id}) }}" 
                                                                                class="btn btn-sm btn-outline-success">
                                                                                 <i class="fas fa-plus"></i> Choix
                                                                             </a>
                                                                         {% endif %}
                                                                     </div>
                                                                 </div>
                                                             </div>
                                                             
                                                             <!-- Choix de ce paragraphe (niveau 2) -->
                                                             {% if choice.destinationParagraph.sourceChoices|length > 0 %}
                                                                 <div class="tree-branches">
                                                                     {% for subChoice in choice.destinationParagraph.sourceChoices %}
                                                                         <div class="tree-branch">
                                                                             <div class="tree-choice">
                                                                                 <i class="fas fa-arrow-right"></i>
                                                                                 <span class="tree-choice-text">{{ subChoice.text }}</span>
                                                                             </div>
                                                                             
                                                                             <!-- Paragraphe de destination (niveau 2) -->
                                                                             <div class="tree-node">
                                                                                 <div class="tree-content">
                                                                                     <div class="tree-paragraph {% if subChoice.destinationParagraph.id == paragraph.id %}tree-current{% endif %}">
                                                                                         <div class="tree-paragraph-header">
                                                                                             <span class="tree-paragraph-id">#{{ subChoice.destinationParagraph.id }}</span>
                                                                                         </div>
                                                                                         <div class="tree-paragraph-content">
                                                                                             {{ subChoice.destinationParagraph.content|striptags|slice(0, 60) }}{% if subChoice.destinationParagraph.content|length > 60 %}...{% endif %}
                                                                                         </div>
                                                                                         <div class="tree-paragraph-actions">
                                                                                             <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': subChoice.destinationParagraph.id}) }}" 
                                                                                                class="btn btn-sm btn-outline-primary">
                                                                                                 <i class="fas fa-eye"></i> Voir
                                                                                             </a>
                                                                                             {% if subChoice.destinationParagraph.id != paragraph.id %}
                                                                                                 <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': subChoice.destinationParagraph.id}) }}" 
                                                                                                    class="btn btn-sm btn-outline-success">
                                                                                                     <i class="fas fa-plus"></i> Choix
                                                                                                 </a>
                                                                                             {% endif %}
                                                                                         </div>
                                                                                     </div>
                                                                                 </div>
                                                                             </div>
                                                                         </div>
                                                                     {% endfor %}
                                                                 </div>
                                                             {% endif %}
                                                         </div>
                                                     </div>
                                                 {% endfor %}
                                             </div>
                                         {% endif %}
                                     </div>
                                 {% else %}
                                     <div class="text-center py-3">
                                         <i class="fas fa-exclamation-triangle text-warning mb-2" style="font-size: 2rem;"></i>
                                         <p class="text-muted">Aucun paragraphe de départ défini pour cette histoire.</p>
                                     </div>
                                 {% endif %}
                             </div>
                         </div>
                     </div>

                     <div class="row">
                         <div class="col-md-6">
                             <div class="card">
                                 <div class="card-header d-flex justify-content-between align-items-center">
                                     <h6 class="mb-0">
                                         <i class="fas fa-link"></i> Choix sortants ({{ paragraph.sourceChoices|length }})
                                     </h6>
                                     <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                                        class="btn btn-sm btn-success">
                                         <i class="fas fa-plus"></i> Nouveau choix
                                     </a>
                                 </div>
                                 <div class="card-body">
                                     {% if paragraph.sourceChoices is empty %}
                                         <div class="text-center py-3">
                                             <i class="fas fa-info-circle text-muted mb-2" style="font-size: 2rem;"></i>
                                             <p class="text-muted mb-3">
                                                 Aucun choix sortant défini
                                             </p>
                                             <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                                                class="btn btn-success">
                                                 <i class="fas fa-plus"></i> Créer le premier choix
                                             </a>
                                         </div>
                                     {% else %}
                                         <ul class="list-group list-group-flush">
                                             {% for choice in paragraph.sourceChoices %}
                                                 <li class="list-group-item">
                                                     <div class="d-flex justify-content-between align-items-start">
                                                         <div class="flex-grow-1">
                                                             <div class="d-flex align-items-center mb-2">
                                                                 <strong class="me-2">{{ choice.text }}</strong>
                                                                 <span class="badge bg-primary">
                                                                     → Paragraphe #{{ choice.destinationParagraph.id }}
                                                                 </span>
                                                                 {% if choice.destinationParagraph.isStartParagraph %}
                                                                     <span class="badge bg-success ms-1">Départ</span>
                                                                 {% endif %}
                                                             </div>
                                                             <small class="text-muted">
                                                                 {{ choice.destinationParagraph.content|striptags|slice(0, 80) }}{% if choice.destinationParagraph.content|length > 80 %}...{% endif %}
                                                             </small>
                                                         </div>
                                                         <div class="btn-group btn-group-sm ms-2">
                                                             <a href="{{ path('app_choice_show', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                                                                class="btn btn-outline-primary" title="Voir le choix">
                                                                 <i class="fas fa-eye"></i>
                                                             </a>
                                                             <a href="{{ path('app_choice_edit', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                                                                class="btn btn-outline-warning" title="Modifier le choix">
                                                                 <i class="fas fa-edit"></i>
                                                             </a>
                                                             <button type="button" class="btn btn-outline-danger" 
                                                                     data-bs-toggle="modal" 
                                                                     data-bs-target="#deleteChoiceModal{{ choice.id }}" 
                                                                     title="Supprimer le choix">
                                                                 <i class="fas fa-trash"></i>
                                                             </button>
                                                         </div>
                                                     </div>
                                                 </li>

                                                 <!-- Modal de suppression pour ce choix -->
                                                 <div class="modal fade" id="deleteChoiceModal{{ choice.id }}" tabindex="-1">
                                                     <div class="modal-dialog">
                                                         <div class="modal-content">
                                                             <div class="modal-header">
                                                                 <h5 class="modal-title">Confirmer la suppression</h5>
                                                                 <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                             </div>
                                                             <div class="modal-body">
                                                                 <p>Êtes-vous sûr de vouloir supprimer ce choix ?</p>
                                                                 <p><strong>Texte :</strong> "{{ choice.text }}"</p>
                                                                 <p><strong>Destination :</strong> Paragraphe #{{ choice.destinationParagraph.id }}</p>
                                                             </div>
                                                             <div class="modal-footer">
                                                                 <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                                 <form method="post" action="{{ path('app_choice_delete', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" style="display: inline;">
                                                                     <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ choice.id) }}">
                                                                     <button type="submit" class="btn btn-danger">Supprimer</button>
                                                                 </form>
                                                             </div>
                                                         </div>
                                                     </div>
                                                 </div>
                                             {% endfor %}
                                         </ul>
                                     {% endif %}
                                 </div>
                             </div>
                         </div>

                         <div class="col-md-6">
                             <div class="card">
                                 <div class="card-header">
                                     <h6 class="mb-0">
                                         <i class="fas fa-link"></i> Choix entrants ({{ paragraph.destinationChoices|length }})
                                     </h6>
                                 </div>
                                 <div class="card-body">
                                     {% if paragraph.destinationChoices is empty %}
                                         <p class="text-muted mb-0">
                                             <i class="fas fa-info-circle"></i> 
                                             Aucun choix entrant défini
                                         </p>
                                     {% else %}
                                         <ul class="list-group list-group-flush">
                                             {% for choice in paragraph.destinationChoices %}
                                                 <li class="list-group-item d-flex justify-content-between align-items-center">
                                                     <div>
                                                         <span>{{ choice.text }}</span>
                                                         <br>
                                                         <small class="text-muted">
                                                             ← Paragraphe #{{ choice.sourceParagraph.id }}
                                                         </small>
                                                     </div>
                                                     <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': choice.sourceParagraph.id}) }}" 
                                                        class="btn btn-sm btn-outline-primary">
                                                         <i class="fas fa-arrow-left"></i> Voir parent
                                                     </a>
                                                 </li>
                                             {% endfor %}
                                         </ul>
                                     {% endif %}
                                 </div>
                             </div>
                         </div>
                     </div>

                    <div class="mt-4">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-lightbulb"></i> Prochaines étapes
                            </h6>
                            <ul class="mb-0">
                                <li>Créez des choix pour lier ce paragraphe à d'autres paragraphes</li>
                                <li>Définissez des conditions pour afficher certains choix</li>
                                <li>Ajoutez des actions pour modifier les statistiques du joueur</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
