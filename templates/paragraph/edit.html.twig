{% extends 'base.html.twig' %}

{% block title %}Modifier le paragraphe - {{ story.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-0">
                                <i class="fas fa-edit"></i> 
                                Modifier le paragraphe #{{ paragraph.id }}
                            </h1>
                            <p class="text-muted mb-0">
                                Histoire : "{{ story.title }}"
                            </p>
                        </div>
                        <div>
                            <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" class="btn btn-success me-2">
                                <i class="fas fa-plus"></i> Nouveau choix
                            </a>
                            <a href="{{ path('app_choice_index', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" class="btn btn-info me-2">
                                <i class="fas fa-fork"></i> Gérer les choix
                            </a>
                            <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': paragraph.id}) }}" class="btn btn-outline-primary me-2">
                                <i class="fas fa-eye"></i> Voir le paragraphe
                            </a>
                                            <a href="{{ path('app_story_show', {'id': story.id}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-book"></i> Voir l'histoire
                </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="content" class="form-label">
                                <i class="fas fa-edit"></i> Contenu du paragraphe
                            </label>
                            <textarea 
                                id="content" 
                                name="content" 
                                class="form-control" 
                                rows="10" 
                                placeholder="Écrivez le contenu de votre paragraphe ici..."
                                required
                            >{{ paragraph.content }}</textarea>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> 
                                Utilisez l'éditeur ci-dessus pour formater votre texte. Vous pouvez ajouter du gras, de l'italique, des listes, etc.
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="is_start_paragraph" name="is_start_paragraph" 
                                       {% if paragraph.isStartParagraph %}checked{% endif %}>
                                <label class="form-check-label" for="is_start_paragraph">
                                    <i class="fas fa-play"></i> 
                                    Ce paragraphe est le point de départ de l'histoire
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> 
                                Cochez cette case si ce paragraphe doit être le premier que les joueurs verront. 
                                Seul un paragraphe peut être le point de départ.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_story_show', {'id': story.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-book"></i> Voir l'histoire
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Vue arborescente de l'histoire -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-sitemap"></i> Vue arborescente de l'histoire
                    </h5>
                </div>
                <div class="card-body">
                    <div class="story-tree">
                        <!-- Paragraphe de départ -->
                        {% set startParagraph = story.paragraphs|filter(p => p.isStartParagraph)|first %}
                        {% if startParagraph %}
                            <div class="tree-node tree-start">
                                <div class="tree-content">
                                    <div class="tree-paragraph {% if startParagraph.id == paragraph.id %}tree-current{% endif %}">
                                        <div class="tree-paragraph-header">
                                            <span class="tree-badge tree-start-badge">
                                                <i class="fas fa-play"></i> Départ
                                            </span>
                                            <span class="tree-paragraph-id">#{{ startParagraph.id }}</span>
                                        </div>
                                        <div class="tree-paragraph-content">
                                            {{ startParagraph.content|striptags|slice(0, 100) }}{% if startParagraph.content|length > 100 %}...{% endif %}
                                        </div>
                                        <div class="tree-paragraph-actions">
                                            <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': startParagraph.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                            {% if startParagraph.id != paragraph.id %}
                                                <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': startParagraph.id}) }}" 
                                                   class="btn btn-sm btn-outline-success">
                                                    <i class="fas fa-plus"></i> Choix
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Choix du paragraphe de départ -->
                                {% if startParagraph.sourceChoices|length > 0 %}
                                    <div class="tree-branches">
                                        {% for choice in startParagraph.sourceChoices %}
                                            <div class="tree-branch">
                                                <div class="tree-choice">
                                                    <i class="fas fa-arrow-right"></i>
                                                    <span class="tree-choice-text">{{ choice.text }}</span>
                                                </div>
                                                
                                                <!-- Paragraphe de destination -->
                                                <div class="tree-node">
                                                    <div class="tree-content">
                                                        <div class="tree-paragraph {% if choice.destinationParagraph.id == paragraph.id %}tree-current{% endif %}">
                                                            <div class="tree-paragraph-header">
                                                                <span class="tree-paragraph-id">#{{ choice.destinationParagraph.id }}</span>
                                                            </div>
                                                            <div class="tree-paragraph-content">
                                                                {{ choice.destinationParagraph.content|striptags|slice(0, 80) }}{% if choice.destinationParagraph.content|length > 80 %}...{% endif %}
                                                            </div>
                                                            <div class="tree-paragraph-actions">
                                                                <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': choice.destinationParagraph.id}) }}" 
                                                                   class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-eye"></i> Voir
                                                                </a>
                                                                {% if choice.destinationParagraph.id != paragraph.id %}
                                                                    <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': choice.destinationParagraph.id}) }}" 
                                                                       class="btn btn-sm btn-outline-success">
                                                                        <i class="fas fa-plus"></i> Choix
                                                                    </a>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Choix de ce paragraphe (niveau 2) -->
                                                    {% if choice.destinationParagraph.sourceChoices|length > 0 %}
                                                        <div class="tree-branches">
                                                            {% for subChoice in choice.destinationParagraph.sourceChoices %}
                                                                <div class="tree-branch">
                                                                    <div class="tree-choice">
                                                                        <i class="fas fa-arrow-right"></i>
                                                                        <span class="tree-choice-text">{{ subChoice.text }}</span>
                                                                    </div>
                                                                    
                                                                    <!-- Paragraphe de destination (niveau 2) -->
                                                                    <div class="tree-node">
                                                                        <div class="tree-content">
                                                                            <div class="tree-paragraph {% if subChoice.destinationParagraph.id == paragraph.id %}tree-current{% endif %}">
                                                                                <div class="tree-paragraph-header">
                                                                                    <span class="tree-paragraph-id">#{{ subChoice.destinationParagraph.id }}</span>
                                                                                </div>
                                                                                <div class="tree-paragraph-content">
                                                                                    {{ subChoice.destinationParagraph.content|striptags|slice(0, 60) }}{% if subChoice.destinationParagraph.content|length > 60 %}...{% endif %}
                                                                                </div>
                                                                                <div class="tree-paragraph-actions">
                                                                                    <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': subChoice.destinationParagraph.id}) }}" 
                                                                                       class="btn btn-sm btn-outline-primary">
                                                                                        <i class="fas fa-eye"></i> Voir
                                                                                    </a>
                                                                                    {% if subChoice.destinationParagraph.id != paragraph.id %}
                                                                                        <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': subChoice.destinationParagraph.id}) }}" 
                                                                                           class="btn btn-sm btn-outline-success">
                                                                                            <i class="fas fa-plus"></i> Choix
                                                                                        </a>
                                                                                    {% endif %}
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="text-center py-3">
                                <i class="fas fa-exclamation-triangle text-warning mb-2" style="font-size: 2rem;"></i>
                                <p class="text-muted">Aucun paragraphe de départ défini pour cette histoire.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Section d'aperçu des choix -->
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-fork"></i> Choix sortants ({{ paragraph.sourceChoices|length }})
                    </h5>
                    <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                       class="btn btn-sm btn-success">
                        <i class="fas fa-plus"></i> Nouveau choix
                    </a>
                </div>
                <div class="card-body">
                    {% if paragraph.sourceChoices is empty %}
                        <div class="text-center py-3">
                            <i class="fas fa-info-circle text-muted mb-2" style="font-size: 2rem;"></i>
                            <p class="text-muted mb-3">
                                Aucun choix sortant défini pour ce paragraphe
                            </p>
                            <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                               class="btn btn-success">
                                <i class="fas fa-plus"></i> Créer le premier choix
                            </a>
                        </div>
                    {% else %}
                        <div class="row">
                            {% for choice in paragraph.sourceChoices %}
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-header">
                                            <h6 class="mb-0">
                                                <i class="fas fa-arrow-right"></i> Choix #{{ choice.id }}
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">
                                                <strong>"{{ choice.text }}"</strong>
                                            </p>
                                            <p class="card-text small text-muted">
                                                → Paragraphe #{{ choice.destinationParagraph.id }}
                                                {% if choice.destinationParagraph.isStartParagraph %}
                                                    <span class="badge bg-success ms-1">Départ</span>
                                                {% endif %}
                                            </p>
                                            <div class="mt-2">
                                                <a href="{{ path('app_choice_edit', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                                                   class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i> Modifier
                                                </a>
                                                <a href="{{ path('app_choice_show', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        tinymce.init({
            selector: '#content',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            height: 400,
            language: 'fr_FR',
            menubar: false,
            branding: false,
            promotion: false,
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; font-size: 14px; }',
            setup: function(editor) {
                editor.on('change', function() {
                    editor.save();
                });
            }
        });
    </script>
{% endblock %}
