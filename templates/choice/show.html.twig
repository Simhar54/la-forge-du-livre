{% extends 'base.html.twig' %}

{% block title %}Détails du choix - {{ story.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-warning">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_story_show', {'id': story.id}) }}" class="text-warning">
                            {{ story.title }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_story_show', {'id': story.id}) }}" class="text-warning">
                            {{ story.title }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': paragraph.id}) }}" class="text-warning">
                            Paragraphe #{{ paragraph.id }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_choice_index', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" class="text-warning">
                            Choix
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Détails du choix</li>
                </ol>
            </nav>

            <!-- Header -->
            <div class="text-center mb-4">
                <h1 class="text-warning">
                    <i class="fas fa-eye"></i> Détails du choix
                </h1>
                <p class="lead text-light">
                    <strong>Histoire :</strong> {{ story.title }} | 
                    <strong>Paragraphe #{{ paragraph.id }}</strong> | 
                    <strong>Choix #{{ choice.id }}</strong>
                </p>
            </div>

            <!-- Paragraphe source -->
            <div class="card card-custom mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt"></i> Paragraphe source
                        {% if paragraph.isStartParagraph %}
                            <span class="badge bg-success ms-2">Paragraphe de départ</span>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="paragraph-content">
                        {{ paragraph.content|raw }}
                    </div>
                </div>
            </div>

            <!-- Détails du choix -->
            <div class="card card-custom mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-fork"></i> Détails du choix #{{ choice.id }}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-warning">
                                <i class="fas fa-comment"></i> Texte du choix
                            </h6>
                            <div class="p-3" style="background: rgba(218, 165, 32, 0.1); border: 1px solid rgba(218, 165, 32, 0.3); border-radius: 8px;">
                                <p class="mb-0 text-light">"{{ choice.text }}"</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-warning">
                                <i class="fas fa-arrow-right"></i> Paragraphe de destination
                            </h6>
                            <div class="p-3" style="background: rgba(218, 165, 32, 0.1); border: 1px solid rgba(218, 165, 32, 0.3); border-radius: 8px;">
                                <p class="mb-0 text-light">
                                    <strong>Paragraphe #{{ choice.destinationParagraph.id }}</strong>
                                    {% if choice.destinationParagraph.isStartParagraph %}
                                        <span class="badge bg-success ms-2">Paragraphe de départ</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Paragraphe de destination -->
            <div class="card card-custom mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-arrow-right"></i> Contenu du paragraphe de destination
                        {% if choice.destinationParagraph.isStartParagraph %}
                            <span class="badge bg-success ms-2">Paragraphe de départ</span>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="paragraph-content">
                        {{ choice.destinationParagraph.content|raw }}
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_choice_index', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                   class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_choice_edit', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                   class="btn btn-custom">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <button type="button" class="btn btn-outline-danger" 
                        data-bs-toggle="modal" 
                        data-bs-target="#deleteModal">
                    <i class="fas fa-trash"></i> Supprimer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer ce choix ?</p>
                <p><strong>Texte :</strong> "{{ choice.text }}"</p>
                <p><strong>Destination :</strong> Paragraphe #{{ choice.destinationParagraph.id }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_choice_delete', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ choice.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
