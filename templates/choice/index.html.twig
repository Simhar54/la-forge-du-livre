{% extends 'base.html.twig' %}

{% block title %}Choix du paragraphe - {{ story.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_home') }}" class="text-warning">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_story_show', {'id': story.id}) }}" class="text-warning">
                            {{ story.title }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_story_show', {'id': story.id}) }}" class="text-warning">
                            {{ story.title }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_paragraph_show', {'storyId': story.id, 'id': paragraph.id}) }}" class="text-warning">
                            Paragraphe #{{ paragraph.id }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Choix</li>
                </ol>
            </nav>

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="text-warning">
                        <i class="fas fa-fork"></i> Choix du paragraphe
                    </h1>
                    <p class="lead text-light">
                        <strong>Histoire :</strong> {{ story.title }} | 
                        <strong>Paragraphe #{{ paragraph.id }}</strong>
                    </p>
                </div>
                <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                   class="btn btn-custom">
                    <i class="fas fa-plus"></i> Nouveau choix
                </a>
            </div>

            <!-- Aperçu du paragraphe -->
            <div class="card card-custom mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt"></i> Aperçu du paragraphe
                        {% if paragraph.isStartParagraph %}
                            <span class="badge bg-success ms-2">Paragraphe de départ</span>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="paragraph-content">
                        {{ paragraph.content|raw }}
                    </div>
                </div>
            </div>

            <!-- Liste des choix -->
            <div class="card card-custom">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-fork"></i> Choix disponibles ({{ choices|length }})
                    </h5>
                </div>
                <div class="card-body">
                    {% if choices is empty %}
                        <div class="text-center py-4">
                            <i class="fas fa-info-circle text-info" style="font-size: 3rem;"></i>
                            <h4 class="mt-3 text-light">Aucun choix défini</h4>
                            <p class="text-muted">Ce paragraphe n'a pas encore de choix. Ajoutez-en un pour rendre l'histoire interactive !</p>
                            <a href="{{ path('app_choice_new', {'storyId': story.id, 'paragraphId': paragraph.id}) }}" 
                               class="btn btn-custom">
                                <i class="fas fa-plus"></i> Créer le premier choix
                            </a>
                        </div>
                    {% else %}
                        <div class="row">
                            {% for choice in choices %}
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100" style="background: rgba(245, 245, 220, 0.1); border: 1px solid rgba(218, 165, 32, 0.3);">
                                        <div class="card-body">
                                            <h6 class="card-title text-warning">
                                                <i class="fas fa-arrow-right"></i> Choix #{{ choice.id }}
                                            </h6>
                                            <p class="card-text text-light mb-2">
                                                <strong>Texte :</strong> "{{ choice.text }}"
                                            </p>
                                            <p class="card-text text-muted small mb-3">
                                                <strong>Destination :</strong> Paragraphe #{{ choice.destinationParagraph.id }}
                                                {% if choice.destinationParagraph.isStartParagraph %}
                                                    <span class="badge bg-success ms-1">Départ</span>
                                                {% endif %}
                                            </p>
                                            
                                            <!-- Aperçu de la destination -->
                                            <div class="mb-3">
                                                <small class="text-muted">Aperçu de la destination :</small>
                                                <div class="mt-1 p-2" style="background: rgba(0,0,0,0.2); border-radius: 4px; font-size: 0.9em;">
                                                    {{ choice.destinationParagraph.content|striptags|slice(0, 100) }}{% if choice.destinationParagraph.content|length > 100 %}...{% endif %}
                                                </div>
                                            </div>

                                            <div class="btn-group w-100" role="group">
                                                <a href="{{ path('app_choice_show', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                                <a href="{{ path('app_choice_edit', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" 
                                                   class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Modifier
                                                </a>
                                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal{{ choice.id }}">
                                                    <i class="fas fa-trash"></i> Supprimer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal de suppression -->
                                <div class="modal fade" id="deleteModal{{ choice.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Êtes-vous sûr de vouloir supprimer ce choix ?</p>
                                                <p><strong>Texte :</strong> "{{ choice.text }}"</p>
                                                <p><strong>Destination :</strong> Paragraphe #{{ choice.destinationParagraph.id }}</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('app_choice_delete', {'storyId': story.id, 'paragraphId': paragraph.id, 'id': choice.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ choice.id) }}">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Actions -->
            <div class="mt-4 text-center">
                <a href="{{ path('app_story_show', {'id': story.id}) }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Retour à l'histoire
                </a>
                <a href="{{ path('app_story_show', {'id': story.id}) }}" class="btn btn-outline-warning">
                    <i class="fas fa-book"></i> Voir l'histoire
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
