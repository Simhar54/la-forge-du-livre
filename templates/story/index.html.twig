{% extends 'base.html.twig' %}

{% block title %}Gestion des Histoires{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gestion des Histoires</h1>
                <a href="{{ path('app_story_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle Histoire
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% if stories is empty %}
                <div class="alert alert-info">
                    <p class="mb-0">Aucune histoire n'a été créée pour le moment.</p>
                    <p class="mb-0">Cliquez sur "Nouvelle Histoire" pour commencer !</p>
                </div>
            {% else %}
                <div class="row">
                    {% for story in stories %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ story.title }}</h5>
                                    {% if story.description %}
                                        <p class="card-text text-muted">{{ story.description|length > 100 ? story.description|slice(0, 100) ~ '...' : story.description }}</p>
                                    {% endif %}
                                    <div class="d-flex align-items-center mb-3">
                                        <span class="badge {{ story.isPublished ? 'bg-success' : 'bg-warning' }}">
                                            {{ story.isPublished ? 'Publiée' : 'Brouillon' }}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('app_story_show', {'id': story.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        <a href="{{ path('app_story_edit', {'id': story.id}) }}" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ story.id }}">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Modal de confirmation de suppression -->
                        <div class="modal fade" id="deleteModal{{ story.id }}" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirmer la suppression</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Êtes-vous sûr de vouloir supprimer l'histoire "{{ story.title }}" ?</p>
                                        <p class="text-danger"><small>Cette action est irréversible.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                        <form method="post" action="{{ path('app_story_delete', {'id': story.id}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ story.id) }}">
                                            <button type="submit" class="btn btn-danger">Supprimer</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
